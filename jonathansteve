    <script>
        // Fungsi untuk memperbarui kelas warna berdasarkan teks
        function updateRiskClass(element) {
            const text = element.innerText.trim().toLowerCase();
            // Hapus semua kelas risiko yang mungkin ada
            element.classList.remove('risk-tinggi', 'risk-sedang', 'risk-rendah');
            
            if (text === 'tinggi') {
                element.classList.add('risk-tinggi');
            } else if (text === 'sedang') {
                element.classList.add('risk-sedang');
            } else if (text === 'rendah') {
                element.classList.add('risk-rendah');
            }
        }

        // Fungsi untuk menghapus baris
        function deleteRow(button) {
            // Dapatkan elemen <tr> terdekat dari tombol yang diklik dan hapus
            button.closest('tr').remove();
        }

        // Fungsi untuk menambah baris baru
        function addJsaRow() {
            const tableBody = document.getElementById('jsa-table-body');
            const newRow = document.createElement('tr');
            
            // Dapatkan nomor baris terakhir
            const lastRow = tableBody.querySelector('tr:last-child');
            let nextNum = 1;
            if (lastRow) {
                const lastNumCell = lastRow.querySelector('td:first-child .editable-cell');
                const lastNum = parseInt(lastNumCell.innerText.trim(), 10);
                if (!isNaN(lastNum)) {
                    nextNum = lastNum + 1;
                }
            }

            newRow.innerHTML = `
                <td><div contenteditable="true" class="editable-cell">${nextNum}</div></td>
                <td><div contenteditable="true" class="editable-cell"></div></td>
                <td><div contenteditable="true" class="editable-cell"></div></td>
                <td><div contenteditable="true" class="editable-cell"></div></td>
                <td><div contenteditable="true" class="editable-cell" oninput="updateRiskClass(this)"></div></td>
                <td><div contenteditable="true" class="editable-cell"></div></td>
                <td class="text-center no-print"><button onclick="deleteRow(this)" class="btn-red-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></button></td>
            `;
            tableBody.appendChild(newRow);
        }

        // Fungsi untuk mencetak
        function printJSA() {
            window.print();
        }
    </script>

</body>
